<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp" android:layout_height="185dp"
    android:background="@color/colorAccent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/movie_list_item_image"
        android:layout_gravity="start|top"
        android:contentDescription="@string/movies_default_alt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movies_default_title"
        android:id="@+id/movie_list_item_title"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/primary_text_default_material_dark" />
</FrameLayout>